<div class="card shadow p-3 mb-5">
  <div class="card-header" style="text-align: center">
    <h3><%= @users.model_name.human(count: 2) %></h3>
  </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Role</th>
                        <th>Actions</th>
                    </tr>
                </thead>

                <tbody>
                    <% @users.each do |user| %>
                    <tr>
                        <td><%= user.name %></td>
                        <td><%= user.role %></td>
                        <td><%= link_to edit_user_path(user), class: "btn btn-info btn-circle" do %>
                         <i class="fas fa-edit"></i>
                        <% end %>
                        <%= link_to user_path(user), class: "btn btn-success btn-circle" do  %> 
                         <i class="fas fa-eye"></i> 
                        <% end %>
                        <%= link_to user_path(user), method: :delete, class: "btn btn-danger btn-circle", data: { confirm: 'Are you sure?' } do  %> 
                         <i class="fas fa-trash"></i> 
                        <% end %>
                        </td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>

        <br>
        <hr>
        <div class=row>
            <div class="col-lg-4 col-md-6 mb-4"></div>
                <div class="col-lg-4 col-md-6 mb-4" id="pagination">
                <%= paginate @users %>
                </div>
            <div class="col-lg-4 col-md-6 mb-4"></div>
        </div>

    </div>
</div>



