<h1>Orders</h1>
<div class="card shadow p-3 mb-5">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Order Number</th>
            <th>User</th>
            <th>Status</th>
            <th>Subtotal</th>
            <th>Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.id %></td>
              <td><%= order.user.name %></td>
              <td><%= order.status %></td>
              <td><%= humanized_money_with_symbol order.subtotal %></td>
              <td>
              <%= link_to order_path(order), class: "btn btn-success btn-circle" do  %> 
                <i class="fas fa-eye"></i> 
              <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <br>
    <hr>
    <div class=row>
      <div class="col-lg-4 col-md-6 mb-4"></div>
        <div class="col-lg-4 col-md-6 mb-4" id="pagination">
          <%= paginate @orders %>
        </div>
      <div class="col-lg-4 col-md-6 mb-4"></div>
    </div>

    <div class="actions">
      <%= link_to root_path, class: "btn btn-warning btn-block btn-sm" do %>
        <span>Keep Shopping</span>
      <% end %>
    </div>
  </div> 
</div>
