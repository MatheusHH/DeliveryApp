<div class="row">
  <div class="col-lg-4 col-md-6 mb-4">
    <div id="carts">
      <%= render 'carts/cart' %>
    </div>
  </div>
</div>
<div class=row>
  <div class="col-lg-12 col-md-6 mb-4" id="search_col">
    <div class="card shadow p-3 mb-5" id="search_card"> 
      <div class="card-body">
        <%= form_with(url: "/dashboard/index", remote: true, method: "get") do %>
          <div class="row">
            <div class="col-sm-12">
              <div class="form-group">
                <div class="input-group mb-6">
                  <%= select_tag(:category_id, options_from_collection_for_select(@categories, "id", "title"), include_blank: true, prompt: "Categorias", class: "form-control") %>
                  <div class="input-group-append">
                    <%= button_tag type: 'submit', class: "btn btn-primary" do %>
                      <i class="fas fa-search"></i>
                    <% end %>
                  </div>
                </div>
              </div>  
            </div>
          </div>
        <% end %>
      </div>
    </div>        
  </div>
</div>
<div class="row" id="results">
    <% @products.each do |product|%>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card h-100">
                <% if product.image.attached? %> 
                  <%= image_tag product.image.variant(resize: "600x400"), class: "card-img-top" %>
                <% else %>
                  <a href="#"><img class="card-img-top" src="http://placehold.it/700x400" alt=""></a>
                <% end %>                
                <div class="card-body">
                <h4 class="card-title">
                  <h4><%= product.title %></h4>
                </h4>
                <h5><%= humanized_money_with_symbol product.price %></h5>
                <p class="card-text"></p>
                </div>
                <div class="card-footer">
                <%= form_for( @order_item , remote: true, class: "inline-form") do |f| %>
                  <div class="row">
                    <div class="col-sm-12">
                      <div class="form-group">
                        <%= f.hidden_field(:product_id, :value => product.id) %>
                        <div class="input-group mb-6">
                          <%= f.number_field(:quantity, :value => 1, :min => 1, class: "form-control") %>
                          <div class="input-group-append">
                            <%= button_tag type: 'submit', class: "btn btn-primary" do %>
                              <i class="fas fa-plus"></i>
                            <% end %>
                            <%= link_to product_path(product.id), remote: true, class: "btn btn-info" do %>
                              <i class="fas fa-eye"></i> 
                            <% end %>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div> 
                <% end %>
              </div>
            </div>
        </div>
    <% end %>
</div>
<div class="row" id="search-results"></div>

<div class=row id="pagination">
    <div class="col-lg-4 col-md-6 mb-4"></div>
      <div class="col-lg-4 col-md-6 mb-4">
         <%= paginate @products %>
      </div>
    <div class="col-lg-4 col-md-6 mb-4"></div>
</div>

