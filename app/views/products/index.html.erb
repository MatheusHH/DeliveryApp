<p id="notice"><%= notice %></p>

<h1>Products</h1>
<div class="card shadow p-3 mb-5">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Title</th>
            <th>Price</th>
            <th>User</th>
            <th>Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td><%= product.title %></td>
              <td><%= product.price %></td>
              <td><%= product.user_id %></td>
              <td><%= link_to edit_product_path(product), class: "btn btn-info btn-circle" do %>
                <i class="fas fa-edit"></i>
              <% end %>
              <%= link_to product_path(product), class: "btn btn-success btn-circle" do  %> 
                <i class="fas fa-eye"></i> 
              <% end %>
              <%= link_to product_path(product), method: :delete, class: "btn btn-danger btn-circle", data: { confirm: 'Are you sure?' } do  %> 
                <i class="fas fa-trash"></i> 
              <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <br>

    <%= link_to new_product_path, class: "btn btn-primary btn-icon-split btn-sm" do %>
    <i class="fas fa-plus"></i>
    <span class="text"> New</span>
    <% end %>
  </div>  
</div>

<div class=row>
    <div class="col-lg-4 col-md-6 mb-4"></div>
      <div class="col-lg-4 col-md-6 mb-4">
         <%= paginate @products %>
      </div>
    <div class="col-lg-4 col-md-6 mb-4"></div>
</div>