$(function () {
  $('#productModal').modal();

  $('h5.modal-title').text(' <%= @product.title %>');
  $('h6.product-price').text('Price: R$ <%= @product.price %>');
  $('h6.product-description').text('Description: <%= @product.description %>');
  $('h6.product-category').text('Category: <%= @product.category.title %>');
});
