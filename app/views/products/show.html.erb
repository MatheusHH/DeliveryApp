<div class="card shadow p-3 mb-5">
<div class="card-header" style="text-align: center"> <%= t('model_helpers.product.product_details')%> </div>
  <div class="card-body">
    <p>
      <strong><%= t('model_helpers.product.title')%>:</strong>
      <%= @product.title %>
    </p>

    <p>
      <strong><%= t('model_helpers.product.price')%>:</strong>
      <%= @product.price %>
    </p>

    <p>
      <strong><%= t('model_helpers.product.image')%>:</strong>
      <br>
      <%= image_tag @product.image.variant(resize: "300x300") if @product.image.attached? %>
    </p>

    <p>
      <strong><%= t('model_helpers.product.category.title')%>:</strong>
      <%= @product.category.title %>
    </p>

    <p>
      <strong><%= t('model_helpers.product.description')%>:</strong>
      <%= @product.description %>
    </p>
    
    <div class="card-footer">
    <div class="actions">
      <%= link_to products_path, class: "btn btn-info btn-icon-split btn-sm" do %>
          <i class="fas fa-backward"></i>
          <span class="text"> Back</span>
        <% end %>
    </div>
    </div>
  </div>
</div> 