<div class="card shadow p-3 mb-5">
  <div class="card-header" style="text-align: center">
    <h3><%= @categories.model_name.human(count: 2) %></h3>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th><%= @categories.human_attribute_name("title") %></th>
            <th><%= t('helpers.submit.actions') %></th>
          </tr>
        </thead>

        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.title %></td>
              <td><%= link_to edit_category_path(category), class: "btn btn-info btn-circle" do %>
                <i class="fas fa-edit"></i>
              <% end %>
              <%= link_to category_path(category), class: "btn btn-success btn-circle" do  %> 
                <i class="fas fa-eye"></i> 
              <% end %>
              <%= link_to category_path(category), method: :delete, class: "btn btn-danger btn-circle", data: { confirm: 'Are you sure?' } do  %> 
                <i class="fas fa-trash"></i> 
              <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <br>
    <hr>
    <div class=row>
      <div class="col-lg-4 col-md-6 mb-4"></div>
        <div class="col-lg-4 col-md-6 mb-4" id="pagination">
          <%= paginate @categories %>
        </div>
      <div class="col-lg-4 col-md-6 mb-4"></div>
    </div>

    <%= link_to new_category_path, class: "btn btn-primary btn-icon-split btn-sm" do %>
    <i class="fas fa-plus"></i>
    <span class="text"> <%= t('actions.new(a)', model: @categories.model_name.human) %></span>
    <% end %>
  </div>  
</div>
