<div class="card shadow p-3 mb-5">
  <div class="card-header" style="text-align: center">
    <h3><%= @deliveries.model_name.human(count: 2) %></h3>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th><%= @deliveries.human_attribute_name("order_id") %></th>
            <th><%= @deliveries.human_attribute_name("user") %></th>
            <th><%= @deliveries.human_attribute_name("status") %></th>
            <th><%= t('helpers.submit.actions') %></th>
          </tr>
        </thead>

        <tbody>
          <% @deliveries.each do |delivery| %>
            <tr>
              <td><%= delivery.order.id %></td>
              <td><%= delivery.user.name %></td>
              <td><%= delivery.status %></td>
              <td><%= link_to edit_delivery_path(delivery), class: "btn btn-info btn-circle" do %>
                <i class="fas fa-edit"></i>
              <% end %>
              <%= link_to delivery_path(delivery), class: "btn btn-success btn-circle" do  %> 
                <i class="fas fa-eye"></i> 
              <% end %>
              <%= link_to delivery_path(delivery), method: :delete, class: "btn btn-danger btn-circle", data: { confirm: 'Are you sure?' } do  %> 
                <i class="fas fa-trash"></i> 
              <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <br>
    <hr>
    <div class=row>
      <div class="col-lg-4 col-md-6 mb-4"></div>
        <div class="col-lg-4 col-md-6 mb-4" id="pagination">
          <%= paginate @deliveries %>
        </div>
      <div class="col-lg-4 col-md-6 mb-4"></div>
    </div>

  </div>  
</div>

